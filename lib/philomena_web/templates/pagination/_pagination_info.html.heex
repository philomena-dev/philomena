<%= if @page.total_entries > 0 do %>
  Showing <%= pluralize("result", "results", @page.total_entries) %>
  <strong>
    <%= max((@page.page_number - 1) * @page.page_size, 0) + 1 %> - <%= min(@page.page_number * @page.page_size, @page.total_entries) %>
  </strong>
  of
  <strong>
    <%= @page.total_entries %>
  </strong>
  total
<% else %>
  No results found
<% end %>
